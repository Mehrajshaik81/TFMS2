<!-- Views/Trips/Details.cshtml -->
@model TFMS.Models.Trip

@{
    ViewData["Title"] = "Trip Details";
}

<h1>Details</h1>

<div>
    <h4>Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle!.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver!.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledStartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledEndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledEndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualStartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualEndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualEndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstimatedDistanceKm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstimatedDistanceKm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualDistanceKm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualDistanceKm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RouteDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RouteDetails)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Fleet Administrator") || User.IsInRole("Fleet Operator"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.TripId">Edit</a>
 
    }
    @if (User.IsInRole("Fleet Administrator") || User.IsInRole("Fleet Operator") || (User.IsInRole("Driver") && Model?.DriverId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
    {
        <a asp-action="UpdateStatus" asp-route-id="@Model?.TripId">Update Status</a>
 
    }
    <a asp-action="Index">Back to List</a>
</div>