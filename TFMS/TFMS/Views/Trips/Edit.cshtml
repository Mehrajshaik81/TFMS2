<!-- Views/Trips/Edit.cshtml -->
@model TFMS.Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
}

<h1>Edit Trip</h1>

<h4>Trip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TripId" />
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartLocation" class="control-label"></label>
                <input asp-for="StartLocation" class="form-control" />
                <span asp-validation-for="StartLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndLocation" class="control-label"></label>
                <input asp-for="EndLocation" class="form-control" />
                <span asp-validation-for="EndLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledStartTime" class="control-label"></label>
                <input asp-for="ScheduledStartTime" class="form-control" />
                <span asp-validation-for="ScheduledStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledEndTime" class="control-label"></label>
                <input asp-for="ScheduledEndTime" class="form-control" />
                <span asp-validation-for="ScheduledEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Delayed">Delayed</option>
                    <option value="Canceled">Canceled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualStartTime" class="control-label"></label>
                <input asp-for="ActualStartTime" class="form-control" />
                <span asp-validation-for="ActualStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualEndTime" class="control-label"></label>
                <input asp-for="ActualEndTime" class="form-control" />
                <span asp-validation-for="ActualEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedDistanceKm" class="control-label"></label>
                <input asp-for="EstimatedDistanceKm" class="form-control" />
                <span asp-validation-for="EstimatedDistanceKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualDistanceKm" class="control-label"></label>
                <input asp-for="ActualDistanceKm" class="form-control" />
                <span asp-validation-for="ActualDistanceKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteDetails" class="control-label"></label>
                <input asp-for="RouteDetails" class="form-control" />
                <span asp-validation-for="RouteDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
