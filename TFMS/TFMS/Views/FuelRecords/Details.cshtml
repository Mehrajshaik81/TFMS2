<!-- Views/FuelRecords/Details.cshtml -->
@model TFMS.Models.FuelRecord

@{
    ViewData["Title"] = "Fuel Record Details";
}

<h1>Details</h1>

<div>
    <h4>Fuel Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle!.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver!.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OdometerReadingKm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OdometerReadingKm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Fleet Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.FuelId">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>